{
  "manifest_version": 2,
  "name": "Sideboard",
  "description": "View your Pinboard bookmarks in a sidebar.",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "sideboard@maxinekrebs.dev"
    }
  },
  "sidebar_action": {
    "default_icon": "icons/pinboard.png",
    "default_title": "Sideboard",
    "default_panel": "sidebar/index.html"
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "permissions": [
    "*://api.pinboard.in/*",
    "storage"
  ]
}